<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  	
  	<display-name>GREENHOUSE</display-name>
  	
  	<welcome-file-list>
    	<welcome-file>greenHouseHome.jsp</welcome-file>
  	</welcome-file-list>
	
	<error-page>
       	<error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    
	<session-config>
    <session-timeout>30</session-timeout> <!-- Timeout di 30 minuti -->
	</session-config>
		
			<servlet>
    			<servlet-name>LogoutServlet</servlet-name>
    			<servlet-class>com.unisa.control.LogoutServlet</servlet-class>
			</servlet>
			<servlet-mapping>
    			<servlet-name>LogoutServlet</servlet-name>
    			<url-pattern>/UserLogoutServlet</url-pattern>
			</servlet-mapping>
		
		
		
			<servlet>
    			<servlet-name>RegistrationServlet</servlet-name>
    			<servlet-class>com.unisa.control.RegistrationServlet</servlet-class>
			</servlet>
			<servlet-mapping>
    			<servlet-name>RegistrationServlet</servlet-name>
    			<url-pattern>/UserRegistrationServlet</url-pattern>
			</servlet-mapping>
		
		
		
			<servlet>
    			<servlet-name>LoginServlet</servlet-name>
    			<servlet-class>com.unisa.control.LoginServlet</servlet-class>
			</servlet>
			<servlet-mapping>
    			<servlet-name>LoginServlet</servlet-name>
    			<url-pattern>/UserLoginServlet</url-pattern>
			</servlet-mapping>
		


			<servlet>
				<servlet-name>UserListServlet</servlet-name>
				<servlet-class>com.unisa.control.UserListServlet</servlet-class>
			</servlet>
			<servlet-mapping>
				<servlet-name>UserListServlet</servlet-name>
				<url-pattern>/User_UserListServlet</url-pattern>
			</servlet-mapping>
			
			<servlet>
				<servlet-name>RecyclingServlet</servlet-name>
				<servlet-class>com.unisa.control.RecyclingServlet</servlet-class>
			</servlet>
			<servlet-mapping>
				<servlet-name>RecyclingServlet</servlet-name>
				<url-pattern>/User_RecyclingListServlet</url-pattern>
			</servlet-mapping>
			
</web-app>